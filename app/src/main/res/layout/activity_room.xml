<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_base_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="336dp"
                android:layout_height="218dp"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@color/red_background">
                <Button
                    android:layout_width="32dp"
                    android:layout_height="14dp"
                    android:text="可提现"
                    android:textColor="@color/text_color_3"
                    android:textSize="9dp"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/shape_yellow"/>
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_room"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img">
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问卷答题"
                        android:textColor="@color/text_color_5"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/text_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_marginTop="8dp"
                        android:text="红包余量10"
                        android:textColor="@color/text_color_2"
                        android:textSize="12dp"/>

                </RelativeLayout>
                <Button
                    android:id="@+id/get_red"
                    android:layout_width="82dp"
                    android:layout_height="36dp"
                    android:text="抢红包"
                    android:textColor="@color/text_color_3"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_button"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginTop="10dp"
                android:background="@color/background_1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_background_white_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发言"
                        android:textSize="12dp"
                        android:textColor="@color/text_color_5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp" />
                    <EditText
                        android:id="@+id/edit_words"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="可填写发表留言"
                        android:background="@null"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"/>
                    <Button
                        android:id="@+id/btn_say"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="发送"
                        android:textColor="@color/text_color_3"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/shape_button"/>

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/shape_line"/>
            <RelativeLayout
                android:id="@+id/friend_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_friend_wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转发到朋友圈"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/text_color_5"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_share"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/merchant_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_room_"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家信息"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="@color/text_color_5"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_line"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
