<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient"
    android:orientation="vertical">
    <include layout="@layout/layout_base_title"/>
    <RelativeLayout
        android:layout_width="326dp"
        android:layout_height="354dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:background="@drawable/background_correct">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="19dp"
            android:textColor="@color/text_color_2"
            android:layout_marginTop="220dp"
            android:text="恭喜您"/>

        <Button
            android:id="@+id/gold_btn"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button"
            android:text=""
            android:textSize="16dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:textColor="@color/text_color_3"/>

    </RelativeLayout>


        <Button
            android:id="@+id/next_question"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/layout_question"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_button_white_background"
            android:text="确定"
            android:layout_marginTop="50dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/text_color_2"/>



</LinearLayout>
