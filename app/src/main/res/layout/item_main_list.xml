<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="163dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_height="129dp"/>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间ID"
            android:textColor="@color/text_color_5"
            android:textSize="13dp"
            android:layout_below="@+id/img_cover"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/text_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包剩余量"
            android:textColor="@color/text_color_2"
            android:textSize="10dp"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/btn_get"
            android:layout_width="56dp"
            android:layout_height="23dp"
            android:text="抢红包"
            android:textColor="@color/text_color_3"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/text_gift"
            android:background="@drawable/shape_button"
            android:layout_below="@+id/text_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3.5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_get"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/img_cover_2"
            android:layout_width="163dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_height="129dp"/>
        <TextView
            android:id="@+id/text_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间ID"
            android:textColor="@color/text_color_5"
            android:textSize="13dp"
            android:layout_below="@+id/img_cover_2"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/text_gift_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包剩余量"
            android:textColor="@color/text_color_2"
            android:textSize="10dp"
            android:layout_below="@+id/text_name_2"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/btn_get_2"
            android:layout_width="56dp"
            android:layout_height="23dp"
            android:text="抢红包"
            android:textColor="@color/text_color_3"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/text_gift_2"
            android:background="@drawable/shape_button"
            android:layout_below="@+id/text_name_2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3.5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_get_2"/>

    </RelativeLayout>

</LinearLayout>
